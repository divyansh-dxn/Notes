<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Notes.NoAction" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Notes" parent="Theme.SplashScreen">
        <item name="postSplashScreenTheme">@style/Theme.Notes.NoAction</item>
        <item name="windowSplashScreenAnimationDuration">
            @integer/default_icon_animation_duration
        </item>
        <item name="windowSplashScreenBackground">@android:color/background_light</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_round</item>
    </style>
</resources>